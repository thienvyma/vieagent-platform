# =============================================================================
# VIEAgent AI Platform - Environment Configuration Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# üåê BASE URL CONFIGURATION
# =============================================================================
# Base URL for the application (used for webhooks, redirects, etc.)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
# Production: NEXT_PUBLIC_BASE_URL="https://your-domain.com"

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
# SQLite database URL (for development)
DATABASE_URL="file:./prisma/dev.db"

# PostgreSQL URL (for production - recommended)
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_SECRET="your-super-secret-jwt-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"
ENCRYPTION_KEY="your-32-character-encryption-key"

# Production URLs (update for your domain)
# NEXTAUTH_URL="https://your-domain.com"

# =============================================================================
# ü§ñ AI MODEL PROVIDERS
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORG_ID="org-your-organization-id" # Optional

# Anthropic Claude API Configuration  
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"

# Google Gemini API Configuration
GOOGLE_GEMINI_API_KEY="your-google-gemini-api-key-here"

# =============================================================================
# üîó PLATFORM INTEGRATIONS
# =============================================================================
# üìò Facebook Messenger Integration
NEXT_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_VERIFY_TOKEN="your-facebook-verify-token"
FACEBOOK_PAGE_ACCESS_TOKEN="your-facebook-page-access-token"

# üü£ Zalo Official Account Integration
NEXT_PUBLIC_ZALO_APP_ID="your-zalo-app-id"
ZALO_APP_SECRET="your-zalo-app-secret"
ZALO_SECRET_KEY="your-zalo-secret-key"
ZALO_ACCESS_TOKEN="your-zalo-access-token"

# üü¢ WeChat Official Account Integration
NEXT_PUBLIC_WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"

# =============================================================================
# üîó GOOGLE INTEGRATION (OAuth & Services)
# =============================================================================
# Google OAuth 2.0 Credentials (for Google services integration)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google API Key (for additional Google services)
GOOGLE_API_KEY="your-google-api-key-for-services"

# =============================================================================
# üíæ VECTOR DATABASE (ChromaDB)
# =============================================================================
# ChromaDB Configuration
CHROMADB_URL="http://localhost:8000"
CHROMADB_HOST="localhost"
CHROMADB_PORT="8000"
CHROMADB_USERNAME=""
CHROMADB_PASSWORD=""
CHROMA_PERSIST_DIRECTORY="./chromadb_data"
CHROMA_SERVER_HOST="localhost"
CHROMA_SERVER_PORT="8000"
CHROMA_SERVER_SSL="false"

# Production ChromaDB (if using hosted service)
# CHROMADB_URL="https://your-chroma-host.com"
# CHROMADB_HOST="your-chroma-host.com"
# CHROMADB_PORT="443"
# CHROMA_SERVER_SSL="true"
# CHROMA_AUTH_TOKEN="your-auth-token"

# =============================================================================
# üìß EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration (for sending emails)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false" # true for 465, false for other ports
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="VIEAgent <noreply@your-domain.com>"

# =============================================================================
# üí≥ PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration (if using Stripe for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal Configuration (alternative payment method)
# PAYPAL_CLIENT_ID="your-paypal-client-id"
# PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
# PAYPAL_MODE="sandbox" # or "live" for production

# =============================================================================
# ‚òÅÔ∏è CLOUD STORAGE
# =============================================================================
# AWS S3 Configuration (for file uploads)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET="your-s3-bucket-name"

# Alternative: Cloudinary (for image/media management)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# =============================================================================
# üìä ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Sentry (for error tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# =============================================================================
# üîÑ CACHING & PERFORMANCE
# =============================================================================
# Redis Configuration (for advanced caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password" # if authentication required

# =============================================================================
# üö® RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100" # max requests per window

# Security configuration
CORS_ORIGIN="http://localhost:3000" # or your production domain
SESSION_TIMEOUT="86400000" # 24 hours in milliseconds

# =============================================================================
# üåê DEPLOYMENT & ENVIRONMENT
# =============================================================================
# Environment mode
NODE_ENV="development" # "production" for live deployment

# Application configuration
APP_NAME="VIEAgent"
APP_URL="http://localhost:3000"
APP_VERSION="1.0.0"

# Feature flags
FEATURE_GOOGLE_INTEGRATION="true"
FEATURE_ADVANCED_ANALYTICS="true"
FEATURE_MULTI_MODEL_SUPPORT="true"
FEATURE_MARKETPLACE="false" # Enable agent marketplace

# =============================================================================
# üîß DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug configuration (development only)
DEBUG="false"
LOG_LEVEL="info" # error, warn, info, debug
ENABLE_QUERY_LOGGING="false"

# Development tools
ENABLE_PRISMA_STUDIO="true"
ENABLE_API_DOCS="true"

# =============================================================================
# üì± MOBILE & PWA
# =============================================================================
# Push notifications (if implementing PWA features)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="mailto:your-email@domain.com"

# =============================================================================
# üéØ THIRD-PARTY INTEGRATIONS
# =============================================================================
# Webhook URLs (for external integrations)
WEBHOOK_SECRET="your-webhook-secret-for-verification"

# Social media integration
FACEBOOK_APP_ID="your-facebook-app-id"
NEXT_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Zalo integration
ZALO_APP_ID="your-zalo-app-id"
NEXT_PUBLIC_ZALO_APP_ID="your-zalo-app-id"
ZALO_APP_SECRET="your-zalo-app-secret"

# WeChat integration
WECHAT_APP_ID="your-wechat-app-id"
NEXT_PUBLIC_WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"

TWITTER_API_KEY="your-twitter-api-key"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"

# =============================================================================
# üíº BUSINESS CONFIGURATION
# =============================================================================
# Subscription plans
DEFAULT_TRIAL_DAYS="14"
MAX_AGENTS_FREE="3"
MAX_AGENTS_PREMIUM="10"
MAX_AGENTS_ENTERPRISE="unlimited"

# File upload limits
MAX_FILE_SIZE="10485760" # 10MB in bytes
MAX_FILES_PER_UPLOAD="5"
ALLOWED_FILE_TYPES="pdf,txt,doc,docx,json,csv"

